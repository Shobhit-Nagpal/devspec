---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---
<!doctype html>
<html lang="en">
   <head>
   	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
   </head>
   <body>
   	<Header />
   	<main class="container mx-auto px-4 max-w-3xl py-12">
   		<section class="text-center">
   			<h1 class="text-4xl font-bold mb-6">Concept Library</h1>
   			<p class="text-xl mb-12 text-gray-600">Our collection of developer tool specifications is coming soon.</p>

   			<div class="grid gap-6">
   				<div class="p-6 bg-gray-50 rounded-lg">
   					<h3 class="text-xl font-semibold mb-4">Upcoming Specifications</h3>
   					<div class="grid gap-4">
   						<div class="p-4 border border-gray-200 rounded-lg">
   							<h4 class="font-medium">Logger Specification</h4>
   							<p class="text-sm text-gray-600 mt-2">Core concepts for building robust logging systems</p>
   							<span class="inline-block mt-2 text-xs bg-gray-200 px-2 py-1 rounded">Coming soon</span>
   						</div>
   					</div>
   				</div>

   				<div class="p-6 bg-gray-50 rounded-lg">
   					<h3 class="text-xl font-semibold mb-4">Want to contribute?</h3>
   					<p class="text-gray-600">
   						We're looking for developers to share their expertise and contribute specifications. 
   						Check back soon for contribution guidelines.
   					</p>
   				</div>
   			</div>
   		</section>
   	</main>
   	<Footer />
   </body>
</html>
